{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch src",
            "type": "typescript",
            "tsconfig": "src/tsconfig.json",
            "option": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "watch test",
            "type": "typescript",
            "tsconfig": "test/tsconfig.json",
            "option": "watch",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}